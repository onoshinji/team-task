<h2>投稿一覧</h2>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
  </tr>
<% @blogs.each do |blog| %>
<tr>
  <td><%= blog.title %></td>
  <td><%= blog.content %></td>
  <td><%= blog.user.name %></td>
  <td><%= link_to '詳細', blog_path(blog.id) %></td>
</tr>
<% end %>
</table>
<%= link_to '投稿', new_blog_path %>

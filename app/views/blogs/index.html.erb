<h2 class="content-title">投稿一覧</h2>
<table class="table table-striped">
  <tr class="table-info">
    <th>タイトル</th>
    <th>内容</th>
    <th>投稿者</th>
    <th colspan="1"></th>
  </tr>
<% @blogs.each do |blog| %>
<tr>
  <td><%= blog.title %></td>
  <td><%= blog.content %></td>
  <td><%= blog.user.name %></td>
  <td><%= link_to '詳細', blog_path(blog.id) %></td>
</tr>
<% end %>
</table>
<div class="content_link">
  <%= link_to '投 稿 画 面', new_blog_path, class: "btn btn-info" %>
</div>
